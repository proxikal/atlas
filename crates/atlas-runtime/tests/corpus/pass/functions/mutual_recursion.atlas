fn is_even_r(n: number) -> bool {
    if (n == 0) {
        return true;
    }
    return is_odd_r(n - 1);
}

fn is_odd_r(n: number) -> bool {
    if (n == 0) {
        return false;
    }
    return is_even_r(n - 1);
}

print(is_even_r(4));
print(is_even_r(7));
print(is_odd_r(3));
print(is_odd_r(6));
